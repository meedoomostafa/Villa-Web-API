@using VillaWebUtility
@inject IHttpContextAccessor Accessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - VillaWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/VillaWeb.styles.css" asp-append-version="true"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
</head>
<body>
    <!-- Animated Background -->
    <div class="animated-bg"></div>
    
    <header>
        <nav class="navbar navbar-expand-lg navbar-glass fixed-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="Customer" asp-controller="CustomerHome" asp-action="Index">
                    <div class="brand-icon">
                        <i class="fas fa-home"></i>
                    </div>
                    <span class="brand-text">VillaWeb</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="CustomerHome" asp-action="Index">
                                <i class="fas fa-home me-2"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="CustomerHome" asp-action="Privacy">
                                <i class="fas fa-shield-alt me-2"></i>Privacy
                            </a>
                        </li>
                        @{
                            var token = Accessor.HttpContext!.Request.Cookies[SD.AccessTokenKey];
                            var isAuthenticated = !string.IsNullOrEmpty(token);
                        }
                        @if (isAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Company" asp-controller="Villa" asp-action="Index">
                                    <i class="fas fa-building me-2"></i>Villas
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Company" asp-controller="VillaNumber" asp-action="Index">
                                    <i class="fas fa-hashtag me-2"></i>Villa Numbers
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Company" asp-controller="Booking" asp-action="Index">
                                    <i class="fas fa-hashtag me-2"></i>Bookings
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Account" asp-controller="AccountHome" asp-action="Logout">
                                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Account" asp-controller="AccountHome" asp-action="Register">
                                    <i class="fas fa-user-plus me-2"></i>Register
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Account" asp-controller="AccountHome" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-2"></i>Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
        
        <!-- Enhanced Hero Section -->
        <div class="hero-section position-relative overflow-hidden">
            <div class="hero-particles"></div>
            <div class="container position-relative">
                <div class="row align-items-center min-vh-75">
                    <div class="col-lg-7">
                        <div class="hero-content">
                            <div class="hero-badge mb-3">
                                <i class="fas fa-star me-2"></i>
                                <span>Premium Property Management Platform</span>
                            </div>
                            <h1 class="hero-title mb-4">
                                Redefining Luxury with <br>
                                <span class="text-gradient">VillaWeb</span>
                            </h1>
                            <p class="hero-subtitle mb-4">
                                Experience the future of property management with our intelligent platform. 
                                Seamlessly manage your villa portfolio with advanced features designed 
                                for modern real estate professionals and property owners.
                            </p>
                            <div class="hero-features d-flex flex-wrap gap-4 mb-5">
                                <div class="feature-item">
                                    <i class="fas fa-shield-check text-primary me-2"></i>
                                    <span>Secure & Reliable</span>
                                </div>
                                <div class="feature-item">
                                    <i class="fas fa-mobile-alt text-primary me-2"></i>
                                    <span>Mobile Optimized</span>
                                </div>
                                <div class="feature-item">
                                    <i class="fas fa-clock text-primary me-2"></i>
                                    <span>Real-time Updates</span>
                                </div>
                            </div>
                            <div class="hero-stats row text-center">
                                <div class="col-4">
                                    <div class="stat-card">
                                        <h3 class="stat-number">150+</h3>
                                        <p class="stat-label">Properties Managed</p>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-card">
                                        <h3 class="stat-number">98%</h3>
                                        <p class="stat-label">Client Satisfaction</p>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-card">
                                        <h3 class="stat-number">24/7</h3>
                                        <p class="stat-label">Support Available</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5">
                        <div class="hero-visual">
                            <div class="floating-card card-1">
                                <div class="card-icon">
                                    <i class="fas fa-home"></i>
                                </div>
                                <div class="card-content">
                                    <h4>Villa Management</h4>
                                    <p>Complete property oversight</p>
                                </div>
                            </div>
                            <div class="floating-card card-2">
                                <div class="card-icon">
                                    <i class="fas fa-chart-line"></i>
                                </div>
                                <div class="card-content">
                                    <h4>Analytics Dashboard</h4>
                                    <p>Real-time insights</p>
                                </div>
                            </div>
                            <div class="floating-card card-3">
                                <div class="card-icon">
                                    <i class="fas fa-users"></i>
                                </div>
                                <div class="card-content">
                                    <h4>Client Portal</h4>
                                    <p>Seamless communication</p>
                                </div>
                            </div>
                            <div class="hero-image-placeholder">
                                <div class="image-glow"></div>
                                <i class="fas fa-building display-1"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Decorative elements -->
            <div class="hero-shape-1"></div>
            <div class="hero-shape-2"></div>
            <div class="hero-shape-3"></div>
        </div>
    </header>

    <div class="container mt-5 mb-5 content-wrapper">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>    
    </div>

    <!-- Enhanced Footer -->
    <footer class="footer-modern">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <div class="footer-brand d-flex align-items-center mb-3">
                        <div class="brand-icon me-3">
                            <i class="fas fa-home"></i>
                        </div>
                        <span class="brand-text">VillaWeb</span>
                    </div>
                    <p class="footer-description">
                        Revolutionizing property management with innovative solutions 
                        and exceptional user experience for the modern real estate industry.
                    </p>
                    <div class="social-links">
                        <a href="#" class="social-link" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-link" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-link" aria-label="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                        <a href="#" class="social-link" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="footer-title">Navigation</h6>
                    <ul class="footer-links">
                        <li><a asp-area="Customer" asp-controller="CustomerHome" asp-action="Index">Home</a></li>
                        <li><a asp-area="Company" asp-controller="Villa" asp-action="Index">Villas</a></li>
                        <li><a asp-area="Company" asp-controller="VillaNumber" asp-action="Index">Villa Numbers</a></li>
                        <li><a asp-area="Customer" asp-controller="CustomerHome" asp-action="Privacy">Privacy Policy</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="footer-title">Features</h6>
                    <ul class="footer-links">
                        <li><a href="#">Property Management</a></li>
                        <li><a href="#">Analytics Dashboard</a></li>
                        <li><a href="#">Client Portal</a></li>
                        <li><a href="#">Mobile App</a></li>
                    </ul>
                </div>
                <div class="col-lg-4 mb-4">
                    <h6 class="footer-title">Stay Connected</h6>
                    <p class="mb-3">Get the latest updates on new features and property management insights.</p>
                    <div class="newsletter-form">
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Enter your email address" aria-label="Email address">
                            <button class="btn btn-primary" type="button" aria-label="Subscribe">
                                <i class="fas fa-paper-plane"></i>
                            </button>
                        </div>
                    </div>
                    <div class="contact-info mt-3">
                        <div class="contact-item">
                            <i class="fas fa-envelope me-2 text-primary"></i>
                            <span>contact@villaweb.com</span>
                        </div>
                        <div class="contact-item mt-2">
                            <i class="fas fa-phone me-2 text-primary"></i>
                            <span>+1 (555) 123-4567</span>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="footer-divider">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="footer-copyright mb-0">
                        © 2025 VillaWeb. All rights reserved. Built with ❤️ for property professionals.
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="footer-badges">
                        <span class="badge bg-success me-2">
                            <i class="fas fa-shield-check me-1"></i>SSL Secured
                        </span>
                        <span class="badge bg-primary me-2">
                            <i class="fas fa-award me-1"></i>Premium Service
                        </span>
                        <span class="badge bg-info">
                            <i class="fas fa-mobile-alt me-1"></i>Mobile Ready
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Back to Top Button -->
    <button id="backToTop" class="back-to-top" aria-label="Back to top">
        <i class="fas fa-chevron-up"></i>
    </button>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>