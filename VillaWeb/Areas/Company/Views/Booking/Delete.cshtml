@model BookingDTO

@{
    ViewBag.Title = "Delete Booking";
    Layout = "_Layout";
}

<div class="content-wrapper">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header Section -->
            <div class="text-center mb-4">
                <div class="hero-badge mb-3" style="background: linear-gradient(135deg, #dc3545, #c82333);">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <span>Danger Zone</span>
                </div>
                <h2 class="hero-title mb-2">Delete Booking Confirmation</h2>
                <p class="hero-subtitle">This action cannot be undone. Please review the details carefully.</p>
            </div>

            <!-- Warning Alert -->
            <div class="card mb-4" style="border-left: 4px solid #dc3545;">
                <div class="card-content p-4">
                    <div class="d-flex align-items-center">
                        <div class="card-icon me-3" style="background: linear-gradient(135deg, #dc3545, #c82333);">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div>
                            <h5 class="mb-1 text-danger">⚠️ Warning!</h5>
                            <p class="mb-0">Are you sure you want to delete this booking? This action cannot be undone and will permanently remove all booking data.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Booking Details -->
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-content p-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="card-icon me-3">
                                    <i class="fas fa-info-circle"></i>
                                </div>
                                <h5 class="mb-0">Booking Details to be Deleted</h5>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="feature-item">
                                        <i class="fas fa-hashtag text-primary me-2"></i>
                                        <span><strong>Booking ID:</strong> #@Model.Id</span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="feature-item">
                                        <i class="fas fa-user text-info me-2"></i>
                                        <span><strong>Guest:</strong> @Model.UserFullName</span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="feature-item">
                                        <i class="fas fa-building text-success me-2"></i>
                                        <span><strong>Villa:</strong> @Model.VillaName</span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="feature-item">
                                        <i class="fas fa-star text-warning me-2"></i>
                                        <span><strong>Rating:</strong> @Model.VillaRate ⭐</span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="feature-item">
                                        <i class="fas fa-calendar-plus text-info me-2"></i>
                                        <span><strong>Check-in:</strong> @Model.StartDate.ToString("MMM dd, yyyy")</span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="feature-item">
                                        <i class="fas fa-calendar-minus text-warning me-2"></i>
                                        <span><strong>Check-out:</strong> @Model.EndDate.ToString("MMM dd, yyyy")</span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="feature-item">
                                        <i class="fas fa-dollar-sign text-success me-2"></i>
                                        <span><strong>Total Price:</strong> $@Model.TotalPrice.ToString("N2")</span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="feature-item">
                                        <i class="fas fa-info-circle me-2"></i>
                                        <span><strong>Status:</strong> 
                                            <span class="badge 
                                                @(Model.Status == VillaWebUtility.SD.BookingStatus.Confirmed ? "bg-success" : 
                                                  Model.Status == VillaWebUtility.SD.BookingStatus.Pending ? "bg-warning" : 
                                                  Model.Status == VillaWebUtility.SD.BookingStatus.Cancelled ? "bg-danger" : "bg-secondary") ms-2">
                                                @Model.Status
                                            </span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Villa Image -->
                <div class="col-lg-4">
                    @if (!string.IsNullOrEmpty(Model.VillaImageUrl))
                    {
                        <div class="card">
                            <div class="card-content p-0" style="border-radius: 12px; overflow: hidden;">
                                <img src="@Model.VillaImageUrl" alt="@Model.VillaName" class="img-fluid w-100" style="height: 250px; object-fit: cover;">
                                <div class="p-3">
                                    <h6 class="mb-0">@Model.VillaName</h6>
                                    <small class="text-muted">@Model.VillaSpecialDetails</small>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="card">
                            <div class="card-content p-4 text-center">
                                <div class="hero-image-placeholder" style="height: 200px;">
                                    <i class="fas fa-building display-4"></i>
                                </div>
                                <h6 class="mt-3 mb-0">@Model.VillaName</h6>
                            </div>
                        </div>
                    }
                </div>
            </div>
            
            <!-- Action Buttons -->
            <div class="card">
                <div class="card-content p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2">
                            <i class="fas fa-arrow-left me-2"></i>Cancel & Go Back
                        </a>
                        <form asp-area="Company" asp-controller="Booking" asp-action="DeleteConfirm" asp-route-id="@Model.Id" method="post" style="display: inline;">
                            <button type="submit" class="btn btn-danger px-4 py-2" onclick="return confirm('Are you absolutely sure you want to delete this booking? This action cannot be undone.')">
                                <i class="fas fa-trash me-2"></i>Confirm Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>