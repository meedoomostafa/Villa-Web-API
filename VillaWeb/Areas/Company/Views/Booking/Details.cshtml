@model BookingDTO

@{
    ViewBag.Title = "Booking Details";
    Layout = "_Layout";
}

<div class="content-wrapper">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header Section -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <div class="hero-badge mb-2">
                        <i class="fas fa-info-circle me-2"></i>
                        <span>Booking Details</span>
                    </div>
                    <h2 class="hero-title mb-0">Booking #@Model.Id</h2>
                </div>
                <div class="hero-features">
                    <span class="badge 
                        @(Model.Status == VillaWebUtility.SD.BookingStatus.Confirmed ? "bg-success" : 
                          Model.Status == VillaWebUtility.SD.BookingStatus.Pending ? "bg-warning" : 
                          Model.Status == VillaWebUtility.SD.BookingStatus.Cancelled ? "bg-danger" : "bg-secondary") fs-5 px-3 py-2">
                        <i class="fas fa-circle me-2" style="font-size: 10px;"></i>
                        @Model.Status
                    </span>
                </div>
            </div>

            <div class="row">
                <!-- Villa Information -->
                <div class="col-lg-6">
                    <div class="floating-card mb-4">
                        <div class="card-content p-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="card-icon me-3">
                                    <i class="fas fa-building"></i>
                                </div>
                                <h5 class="mb-0">Villa Information</h5>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(Model.VillaImageUrl))
                            {
                                <div class="hero-image-placeholder mb-3" style="height: 200px; border-radius: 12px; overflow: hidden;">
                                    <img src="@Model.VillaImageUrl" alt="@Model.VillaName" class="img-fluid w-100 h-100" style="object-fit: cover;">
                                </div>
                            }
                            
                            <h4 class="hero-title mb-3">@Model.VillaName</h4>
                            
                            <div class="feature-item mb-2">
                                <i class="fas fa-star text-warning me-2"></i>
                                <span class="fw-semibold">Rating: @Model.VillaRate ‚≠ê</span>
                            </div>
                            
                            <div class="feature-item">
                                <i class="fas fa-info-circle text-info me-2"></i>
                                <span>@Model.VillaSpecialDetails</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Booking Information -->
                <div class="col-lg-6">
                    <div class="floating-card mb-4">
                        <div class="card-content p-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="card-icon me-3">
                                    <i class="fas fa-calendar-check"></i>
                                </div>
                                <h5 class="mb-0">Booking Information</h5>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label text-muted">
                                    <i class="fas fa-user me-2"></i>Guest Name
                                </label>
                                <p class="hero-subtitle fw-semibold mb-0">@Model.UserFullName</p>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-6">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-calendar-plus me-2"></i>Check-in
                                    </label>
                                    <p class="hero-subtitle fw-semibold mb-0">@Model.StartDate.ToString("MMM dd, yyyy")</p>
                                </div>
                                <div class="col-6">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-calendar-minus me-2"></i>Check-out
                                    </label>
                                    <p class="hero-subtitle fw-semibold mb-0">@Model.EndDate.ToString("MMM dd, yyyy")</p>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label text-muted">
                                    <i class="fas fa-clock me-2"></i>Duration
                                </label>
                                <p class="hero-subtitle fw-semibold mb-0">@((Model.EndDate - Model.StartDate).Days) nights</p>
                            </div>
                            
                            <div class="hero-stats text-center">
                                <div class="stat-card">
                                    <h2 class="stat-number text-gradient">$@Model.TotalPrice.ToString("N2")</h2>
                                    <p class="stat-label">Total Amount</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Action Buttons -->
            <div class="floating-card">
                <div class="card-content p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-area="Company" asp-controller="Booking" asp-action="Index" class="btn btn-outline-secondary px-4 py-2">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                        <div class="hero-features">
                            <a asp-area="Company" asp-controller="Booking" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2 px-4 py-2">
                                <i class="fas fa-edit me-2"></i>Edit Booking
                            </a>
                            <a asp-area="Company" asp-controller="Booking" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger px-4 py-2">
                                <i class="fas fa-trash me-2"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>