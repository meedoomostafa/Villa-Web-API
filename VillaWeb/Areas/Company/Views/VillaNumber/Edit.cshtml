@model VillaNumberUpdateDTO

@{
    ViewBag.Title = "Edit Villa Number";
    Layout = "_Layout";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-12">
            <!-- Header Section -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="hero-title mb-2">
                        <i class="fas fa-edit me-2 text-primary"></i>Edit Villa Number #@Model.VillaNo
                    </h2>
                    <p class="hero-subtitle mb-0">Update villa number configuration and special details</p>
                </div>
                <div class="hero-features">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </div>

            <!-- Main Content Card -->
            <div class="card">
                <div class="card-content p-4">
                    <form asp-area="Company" asp-controller="VillaNumber" asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="VillaNo" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <!-- Villa Number Display (Read-only) -->
                        <div class="alert alert-info mb-4">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-info-circle me-3"></i>
                                <div>
                                    <strong>Villa Number:</strong> #@Model.VillaNo
                                    <br>
                                    <small class="text-muted">The villa number cannot be changed during editing.</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="VillaId" class="form-label fw-semibold">
                                        <i class="fas fa-home me-2 text-success"></i>Villa ID
                                    </label>
                                    <input asp-for="VillaId" type="number" class="form-control form-control-lg" placeholder="Enter Villa ID" />
                                    <span asp-validation-for="VillaId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <!-- Spacer for better alignment -->
                                <div class="d-flex align-items-center h-100">
                                    <div class="text-muted">
                                        <i class="fas fa-lightbulb me-2"></i>
                                        Ensure the Villa ID corresponds to an existing villa in the system.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="SpetialDeatils" class="form-label fw-semibold">
                                <i class="fas fa-star me-2 text-warning"></i>Special Details
                            </label>
                            <textarea asp-for="SpetialDeatils" class="form-control" rows="4" placeholder="Enter any special details or configurations for this villa number..."></textarea>
                            <span asp-validation-for="SpetialDeatils" class="text-danger"></span>
                            <div class="form-text text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Optional: Add any special features, configurations, or notes for this villa number.
                            </div>
                        </div>

                        <div class="form-group mt-5">
                            <div class="d-flex gap-3">
                                <button type="submit" class="btn btn-primary btn-lg px-4">
                                    <i class="fas fa-save me-2"></i>Update Villa Number
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                    <i class="fas fa-times me-2"></i>Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Edit History Card -->
            <div class="card mt-4">
                <div class="card-content p-4">
                    <h5 class="mb-3">
                        <i class="fas fa-history me-2 text-info"></i>Edit Guidelines
                    </h5>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="d-flex align-items-start mb-3">
                                <div class="brand-icon me-3" style="width: 32px; height: 32px; font-size: 12px;">
                                    <i class="fas fa-lock"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Protected Fields</h6>
                                    <small class="text-muted">Villa Number cannot be modified to maintain data integrity.</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-start mb-3">
                                <div class="brand-icon me-3" style="width: 32px; height: 32px; font-size: 12px;">
                                    <i class="fas fa-check-circle"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Validation</h6>
                                    <small class="text-muted">All changes are validated before saving to ensure data consistency.</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-start mb-3">
                                <div class="brand-icon me-3" style="width: 32px; height: 32px; font-size: 12px;">
                                    <i class="fas fa-save"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Auto-Save</h6>
                                    <small class="text-muted">Changes are automatically saved when you click the Update button.</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}