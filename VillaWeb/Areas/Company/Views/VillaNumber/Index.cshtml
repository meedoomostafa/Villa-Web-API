@model List<VillaNumberDTO>

@{
ViewBag.Title = "Villa Number Management";
Layout = "_Layout";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-12">
            <!-- Header Section -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="hero-title mb-2">Villa Number Management</h2>
                    <p class="hero-subtitle mb-0">Manage villa numbers and their special configurations</p>
                </div>
                <div class="hero-features">
                    <a asp-action="Create" class="btn btn-primary px-4 py-2">
                        <i class="fas fa-plus me-2"></i>New Villa Number
                    </a>
                </div>
            </div>

            <!-- Stats Cards -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-icon">
                            <i class="fas fa-hashtag text-primary"></i>
                        </div>
                        <div class="card-content">
                            <h3 class="stat-number">@(Model?.Count ?? 0)</h3>
                            <p class="stat-label">Total Villa Numbers</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-icon">
                            <i class="fas fa-home text-success"></i>
                        </div>
                        <div class="card-content">
                            <h3 class="stat-number">@(Model?.Select(v => v.VillaId).Distinct().Count() ?? 0)</h3>
                            <p class="stat-label">Unique Villas</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-icon">
                            <i class="fas fa-star text-warning"></i>
                        </div>
                        <div class="card-content">
                            <h3 class="stat-number">@(Model?.Count(v => !string.IsNullOrEmpty(v.SpetialDeatils)) ?? 0)</h3>
                            <p class="stat-label">With Special Details</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-icon">
                            <i class="fas fa-check-circle text-info"></i>
                        </div>
                        <div class="card-content">
                            <h3 class="stat-number">@(Model?.Count ?? 0)</h3>
                            <p class="stat-label">Active Numbers</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content Card -->
            <div class="card">
                <div class="card-content p-4">
                    @if (Model != null && Model.Any())
                    {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                            <tr>
                                <th><i class="fas fa-hashtag me-2"></i>Villa Number</th>
                                <th><i class="fas fa-home me-2"></i>Villa</th>
                                <th><i class="fas fa-star me-2"></i>Special Details</th>
                                <th><i class="fas fa-cog me-2"></i>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var villaNumber in Model)
                            {
                            <tr>
                                <td class="fw-bold text-primary">#@villaNumber.VillaNo</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="brand-icon me-2" style="width: 40px; height: 40px; font-size: 16px;">
                                            <i class="fas fa-home"></i>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@villaNumber.Villa.Name</div>
                                            <small class="text-muted">Villa ID: @villaNumber.VillaId</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(villaNumber.SpetialDeatils))
                                    {
                                    <span class="text-truncate" style="max-width: 200px; display: inline-block;" title="@villaNumber.SpetialDeatils">
                                                        @(villaNumber.SpetialDeatils.Length > 50 ? villaNumber.SpetialDeatils.Substring(0, 50) + "..." : villaNumber.SpetialDeatils)
                                                    </span>
                                    }
                                    else
                                    {
                                    <span class="text-muted fst-italic">No special details</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@villaNumber.VillaNo" class="btn btn-outline-primary btn-sm" title="Edit Villa Number">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@villaNumber.VillaNo" class="btn btn-outline-danger btn-sm" title="Delete Villa Number" onclick="return confirm('Are you sure you want to delete this villa number?');">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                    }
                    else
                    {
                    <div class="text-center py-5">
                        <div class="hero-image-placeholder mb-4" style="width: 120px; height: 120px; margin: 0 auto;">
                            <i class="fas fa-hashtag display-3"></i>
                        </div>
                        <h4 class="hero-title mb-3">No Villa Numbers Yet</h4>
                        <p class="hero-subtitle mb-4">Start organizing your villas by creating villa numbers with special configurations.</p>
                        <a asp-action="Create" class="btn btn-primary px-4 py-2">
                            <i class="fas fa-plus me-2"></i>Create First Villa Number
                        </a>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Initialize Bootstrap tooltips
    document.addEventListener('DOMContentLoaded', function () {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script>
}