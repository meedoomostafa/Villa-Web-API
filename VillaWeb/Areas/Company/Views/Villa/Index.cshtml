@model List<VillaDTO>

@{
    ViewBag.Title = "Villa Management";
    Layout = "_Layout";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-12">
            <!-- Header Section -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="hero-title mb-2">Villa Management</h2>
                    <p class="hero-subtitle mb-0">Manage your villa collection and property details</p>
                </div>
                <div class="hero-features">
                    <a asp-action="Create" class="btn btn-primary px-4 py-2">
                        <i class="fas fa-plus me-2"></i>New Villa
                    </a>
                </div>
            </div>

            <!-- Stats Cards -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-icon">
                            <i class="fas fa-home text-primary"></i>
                        </div>
                        <div class="card-content">
                            <h3 class="stat-number">@(Model?.Count ?? 0)</h3>
                            <p class="stat-label">Total Villas</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-icon">
                            <i class="fas fa-users text-success"></i>
                        </div>
                        <div class="card-content">
                            <h3 class="stat-number">@(Model?.Sum(v => v.Occupancy) ?? 0)</h3>
                            <p class="stat-label">Total Capacity</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-icon">
                            <i class="fas fa-dollar-sign text-warning"></i>
                        </div>
                        <div class="card-content">
                            <h3 class="stat-number">@(Model?.Average(v => v.Rate).ToString("C") ?? "$0")</h3>
                            <p class="stat-label">Avg Rate</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stat-card">
                        <div class="card-icon">
                            <i class="fas fa-ruler-combined text-info"></i>
                        </div>
                        <div class="card-content">
                            <h3 class="stat-number">@(Model?.Sum(v => v.Sqft).ToString("N0") ?? "0")</h3>
                            <p class="stat-label">Total Sq Ft</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content Card -->
            <div class="card">
                <div class="card-content p-4">
                    @if (Model != null && Model.Any())
                    {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                            <tr>
                                <th><i class="fas fa-hashtag me-2"></i>ID</th>
                                <th><i class="fas fa-tag me-2"></i>Name</th>
                                <th><i class="fas fa-info-circle me-2"></i>Details</th>
                                <th><i class="fas fa-star me-2"></i>Amenities</th>
                                <th><i class="fas fa-dollar-sign me-2"></i>Rate</th>
                                <th><i class="fas fa-users me-2"></i>Occupancy</th>
                                <th><i class="fas fa-ruler-combined me-2"></i>Sq Ft</th>
                                <th><i class="fas fa-cog me-2"></i>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var villa in Model)
                            {
                            <tr>
                                <td class="fw-bold text-primary">#@villa.Id</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(villa.ImageUrl))
                                        {
                                        <img src="@villa.ImageUrl" alt="Villa" class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover; border: 2px solid var(--primary-color);">
                                        }
                                        else
                                        {
                                        <div class="brand-icon me-2" style="width: 40px; height: 40px; font-size: 16px;">
                                            <i class="fas fa-home"></i>
                                        </div>
                                        }
                                        <div>
                                            <div class="fw-semibold">@villa.Name</div>
                                            <small class="text-muted">Premium Villa</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                                <span class="text-truncate" style="max-width: 200px; display: inline-block;" title="@villa.Details">
                                                    @(villa.Details?.Length > 50 ? villa.Details.Substring(0, 50) + "..." : villa.Details)
                                                </span>
                                </td>
                                <td>
                                                <span class="text-truncate" style="max-width: 150px; display: inline-block;" title="@villa.Amenity">
                                                    @(villa.Amenity?.Length > 30 ? villa.Amenity.Substring(0, 30) + "..." : villa.Amenity)
                                                </span>
                                </td>
                                <td class="fw-bold text-success">@villa.Rate.ToString("C")</td>
                                <td>
                                                <span class="badge bg-info">
                                                    <i class="fas fa-users me-1"></i>@villa.Occupancy
                                                </span>
                                </td>
                                <td>@villa.Sqft.ToString("N0") sq ft</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@villa.Id" class="btn btn-outline-info btn-sm" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@villa.Id" class="btn btn-outline-primary btn-sm" title="Edit Villa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@villa.Id" class="btn btn-outline-danger btn-sm" title="Delete Villa" onclick="return confirm('Are you sure you want to delete this villa?');">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                    }
                    else
                    {
                    <div class="text-center py-5">
                        <div class="hero-image-placeholder mb-4" style="width: 120px; height: 120px; margin: 0 auto;">
                            <i class="fas fa-home display-3"></i>
                        </div>
                        <h4 class="hero-title mb-3">No Villas Yet</h4>
                        <p class="hero-subtitle mb-4">Start building your villa collection by adding your first property.</p>
                        <a asp-action="Create" class="btn btn-primary px-4 py-2">
                            <i class="fas fa-plus me-2"></i>Create First Villa
                        </a>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Initialize Bootstrap tooltips
    document.addEventListener('DOMContentLoaded', function () {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script>
}