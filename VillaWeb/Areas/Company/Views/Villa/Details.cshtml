                            var amenityIcons = new Dictionary<string, string>
                            {
                                {"wifi", "fas fa-wifi"},
                                {"pool", "fas fa-swimming-pool"},
                                {"parking", "fas fa-parking"},
                                {"kitchen", "fas fa-utensils"},
                                {"air conditioning", "fas fa-snowflake"},
                                {"tv", "fas fa-tv"},
                                {"gym", "fas fa-dumbbell"},
                                {"spa", "fas fa-spa"},
