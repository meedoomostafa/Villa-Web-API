@section Scripts {
    <script>
        $(document).ready(function() {
            const baseRate = @Model.Rate;
            
            // Set minimum date to today
            const today = new Date().toISOString().split('T')[0];
            $('#startDate').attr('min', today);
            $('#endDate').attr('min', today);
            
            // Calculate price and validate form on date change
            $('#startDate, #endDate, #villaNumber').on('change', function() {
                calculatePrice();
                updateEndDateMin();
                validateForm();
            });
            
            function updateEndDateMin() {
                const startDate = $('#startDate').val();
                if (startDate) {
                    const minEndDate = new Date(startDate);
                    minEndDate.setDate(minEndDate.getDate() + 1);
                    $('#endDate').attr('min', minEndDate.toISOString().split('T')[0]);
                }
            }
            
            function calculatePrice() {
                const startDate = new Date($('#startDate').val());
                const endDate = new Date($('#endDate').val());
                
                if (startDate && endDate && endDate > startDate) {
                    const timeDiff = endDate.getTime() - startDate.getTime();
                    const daysDiff = Math.ceil(timeDiff / (1000 * 3600 * 24));
                    
                    const subtotal = baseRate * daysDiff;
                    const serviceFee = subtotal * 0.1; // 10% service fee
                    const taxes = subtotal * 0.12; // 12% taxes
                    const total = subtotal + serviceFee + taxes;
                    
                    $('#numberOfNights').text(daysDiff + (daysDiff === 1 ? ' night' : ' nights'));
                    $('#serviceFee').text('$' + serviceFee.toFixed(2));
                    $('#taxes').text('$' + taxes.toFixed(2));
                    $('#totalPrice').text('$' + total.toFixed(2));
                    
                    // Update hidden field
                    $('#hiddenTotalPrice').val(total.toFixed(2));
                    
                    return total;
                } else {
                    $('#numberOfNights').text('-');
                    $('#serviceFee').text('$0');
                    $('#taxes').text('$0');
                    $('#totalPrice').text('$0');
                    $('#hiddenTotalPrice').val('0');
                    return 0;
                }
            }
            
            function validateForm() {
                const startDate = $('#startDate').val();
                const endDate = $('#endDate').val();
                const villaNumber = $('#villaNumber').val();
                
                const isValid = startDate && endDate && villaNumber && new Date(endDate) > new Date(startDate);
                $('#reserveBtn').prop('disabled', !isValid);
                
                return isValid;
            }
            
            // Form submission validation
            $('#bookingForm').on('submit', function(e) {
                e.preventDefault();
                e.stopPropagation();
                
                if (!validateForm()) {
                    $(this).addClass('was-validated');
                    return false;
                }
                
                const totalPrice = calculatePrice();
                if (totalPrice <= 0) {
                    alert('Please select valid dates to calculate the total price.');
                    return false;
                }
                
                // If all validations pass, submit the form
                this.submit();
            });
            
            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
            
            // Initial validation check
            validateForm();
        });
    </script>
}

