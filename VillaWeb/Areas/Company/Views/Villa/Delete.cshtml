@model VillaDTO

@{
    ViewBag.Title = "Delete Villa";
    Layout = "_Layout";
}

<div class="content-wrapper">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header Section -->
            <div class="text-center mb-4">
                <div class="hero-badge mb-3" style="background: linear-gradient(135deg, #dc3545, #c82333);">
                    <i class="fas fa-trash-alt me-2"></i>
                    <span>Danger Zone</span>
                </div>
                <h2 class="hero-title mb-2">Delete Villa Confirmation</h2>
                <p class="hero-subtitle">This action cannot be undone. Please review the details carefully.</p>
            </div>

            <!-- Warning Alert -->
            <div class="card mb-4" style="border-left: 4px solid #dc3545;">
                <div class="card-content p-4">
                    <div class="d-flex align-items-center">
                        <div class="card-icon me-3" style="background: linear-gradient(135deg, #dc3545, #c82333);">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div>
                            <h5 class="mb-1 text-danger">⚠️ Warning!</h5>
                            <p class="mb-0">Are you sure you want to delete this villa? This action cannot be undone and will permanently remove all villa data.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Villa Details -->
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-content p-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="card-icon me-3">
                                    <i class="fas fa-home"></i>
                                </div>
                                <h5 class="mb-0">Villa Details to be Deleted</h5>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="feature-item">
                                        <i class="fas fa-hashtag text-primary me-2"></i>
                                        <span><strong>Villa ID:</strong> #@Model.Id</span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="feature-item">
                                        <i class="fas fa-tag text-info me-2"></i>
                                        <span><strong>Name:</strong> @Model.Name</span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="feature-item">
                                        <i class="fas fa-dollar-sign text-success me-2"></i>
                                        <span><strong>Rate:</strong> @Model.Rate.ToString("C")</span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="feature-item">
                                        <i class="fas fa-users text-warning me-2"></i>
                                        <span><strong>Occupancy:</strong> @Model.Occupancy guests</span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="feature-item">
                                        <i class="fas fa-ruler-combined text-secondary me-2"></i>
                                        <span><strong>Size:</strong> @Model.Sqft sq ft</span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="feature-item">
                                        <i class="fas fa-star text-warning me-2"></i>
                                        <span><strong>Amenities:</strong> @Model.Amenity</span>
                                    </div>
                                </div>
                            </div>

                            <div class="mt-3">
                                <label class="form-label text-muted">
                                    <i class="fas fa-info-circle me-2"></i>Description
                                </label>
                                <p class="hero-subtitle">@Model.Details</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Villa Image -->
                <div class="col-lg-4">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="card">
                            <div class="card-content p-0" style="border-radius: 12px; overflow: hidden;">
                                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid w-100" style="height: 250px; object-fit: cover;">
                                <div class="p-3">
                                    <h6 class="mb-0">@Model.Name</h6>
                                    <small class="text-muted">Premium Villa</small>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="card">
                            <div class="card-content p-4 text-center">
                                <div class="hero-image-placeholder" style="height: 200px;">
                                    <i class="fas fa-home display-4"></i>
                                </div>
                                <h6 class="mt-3 mb-0">@Model.Name</h6>
                            </div>
                        </div>
                    }
                </div>
            </div>
            
            <!-- Action Buttons -->
            <div class="card">
                <div class="card-content p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-area="Company" asp-controller="Villa" asp-action="Index" class="btn btn-outline-secondary px-4 py-2">
                            <i class="fas fa-arrow-left me-2"></i>Cancel & Go Back
                        </a>
                        <form asp-area="Company" asp-controller="Villa" asp-action="DeleteConfirm" method="post" style="display: inline;">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger px-4 py-2" onclick="return confirm('Are you absolutely sure you want to delete this villa? This action cannot be undone.')">
                                <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>