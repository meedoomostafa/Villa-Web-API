@model VillaCreateDTO

@{
    ViewBag.Title = "Create Villa";
    Layout = "_Layout";
}

<div class="content-wrapper">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header Section -->
            <div class="text-center mb-4">
                <div class="hero-badge mb-3">
                    <i class="fas fa-plus me-2"></i>
                    <span>New Villa Creation</span>
                </div>
                <h2 class="hero-title mb-2">Create New Villa</h2>
                <p class="hero-subtitle">Add a new villa to your property collection</p>
            </div>

            <!-- Form Card -->
            <div class="card">
                <div class="card-content p-4">
                    <form asp-area="Company" asp-controller="Villa" asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label">
                                <i class="fas fa-tag me-2 text-primary"></i>Villa Name
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-home"></i></span>
                                <input asp-for="Name" class="form-control" placeholder="Enter villa name (max 30 characters)" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Details" class="form-label">
                                <i class="fas fa-info-circle me-2 text-info"></i>Villa Details
                            </label>
                            <textarea asp-for="Details" class="form-control" rows="4" placeholder="Enter villa details"></textarea>
                            <span asp-validation-for="Details" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="Rate" class="form-label">
                                    <i class="fas fa-dollar-sign me-2 text-success"></i>Nightly Rate
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Rate" type="number" step="0.01" class="form-control" placeholder="Enter nightly rate" />
                                </div>
                                <span asp-validation-for="Rate" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="Occupancy" class="form-label">
                                    <i class="fas fa-users me-2 text-warning"></i>Max Occupancy
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-users"></i></span>
                                    <input asp-for="Occupancy" type="number" class="form-control" placeholder="Enter max occupancy" />
                                </div>
                                <span asp-validation-for="Occupancy" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Sqft" class="form-label">
                                <i class="fas fa-ruler-combined me-2 text-secondary"></i>Square Footage
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-ruler"></i></span>
                                <input asp-for="Sqft" type="number" class="form-control" placeholder="Enter square footage" />
                                <span class="input-group-text">sq ft</span>
                            </div>
                            <span asp-validation-for="Sqft" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">
                                <i class="fas fa-camera me-2 text-primary"></i>Villa Image
                            </label>
                            <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                            <small class="text-muted">Upload a high-quality image of the villa (JPG, PNG)</small>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Amenity" class="form-label">
                                <i class="fas fa-star me-2 text-warning"></i>Amenities
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-check"></i></span>
                                <input asp-for="Amenity" class="form-control" placeholder="Enter amenities (e.g., Pool, Wi-Fi, Kitchen)" />
                            </div>
                            <span asp-validation-for="Amenity" class="text-danger small"></span>
                            <small class="text-muted">Separate multiple amenities with commas</small>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-primary px-4 py-2">
                                <i class="fas fa-save me-2"></i>Create Villa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}